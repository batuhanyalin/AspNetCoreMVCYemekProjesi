@model AspNetCoreMVCYemekProjesi.Data.Models.Category
@{
    ViewData["Title"] = "CategoryAdd";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("CategoryAdd", "Category", FormMethod.Post))
{
    <div class="container">
        <div class="row">
            <div class="col col-md-8">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Category Name</th>
                            <td>
                                @Html.TextBoxFor(m => m.CategoryName, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.CategoryName, "", new { @style = "color:red" })
                            </td>

                        </tr>
                        <tr>
                            <th>Category Description</th>
                            <td>
                                @Html.TextBoxFor(m => m.CategoryDescription, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.CategoryDescription, "", new { @style = "color:red" })
                            </td>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
        <div class="row">
            <div class="col col-md-6">
                <button style="width:100px" class="btn btn-success">Save</button>
            </div>
        </div>
    </div>
}

